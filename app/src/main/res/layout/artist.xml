<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_indent">

    <ImageView
        android:id="@+id/image"
        android:layout_height="@dimen/shortlist_image_size"
        android:layout_width="@dimen/shortlist_image_size"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_indent"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/album_shortlist_text_size"
        android:textColor="@color/text_color"/>

</LinearLayout>